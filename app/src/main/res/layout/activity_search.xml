<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <ImageView
        android:id="@+id/imageView15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:translationX="-120dp"
        app:srcCompat="@drawable/logo2" />

    <FrameLayout
        android:layout_width="359dp"
        android:layout_height="56dp">

        <ImageView
            android:id="@+id/imageView17"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/buttonsearch" />

        <EditText
            android:id="@+id/searchInput"
            android:layout_width="380dp"
            android:layout_height="50dp"
            android:background="@android:color/transparent"
            android:hint="검색어를 입력하세요"
            android:inputType="text"
            android:translationX="10dp" />

        <ImageButton
            android:id="@+id/searchButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:background="#00FFFFFF"
            app:srcCompat="@drawable/airp"
            android:layout_marginEnd="10dp"
            android:contentDescription="업로드 버튼"/>
    </FrameLayout>

    <ListView
        android:id="@+id/searchResultsListView"
        android:layout_width="350dp"
        android:layout_height="482dp"
        android:background="@color/green">
    </ListView>

    <FrameLayout
        android:layout_width="381dp"
        android:layout_height="56dp"
        android:layout_marginTop="150dp">

        <ImageButton
            android:id="@+id/buttonBackToMain"
            android:layout_width="62dp"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:background="#00FFFFFF"
            android:contentDescription="되돌아가기 버튼"
            app:srcCompat="@drawable/back" />

        <ImageButton
            android:id="@+id/uploadButton"
            android:layout_width="193dp"
            android:layout_height="57dp"
            android:layout_gravity="center"
            android:background="#00FFFFFF"
            android:contentDescription="업로드 버튼"
            app:srcCompat="@drawable/summitbutton" />
    </FrameLayout>

</LinearLayout>
