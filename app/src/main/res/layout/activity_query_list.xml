<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".QueryListActivity">

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left|end"
        android:translationX="-110dp"
        app:srcCompat="@drawable/logo2" />

    <ImageView
        android:id="@+id/imageView13"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:translationX="-80dp"
        android:layout_marginTop="10dp"
        app:srcCompat="@drawable/userdruglis" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <EditText
            android:id="@+id/addItemEditText"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_gravity="start"
            android:background="@android:color/transparent"
            android:hint="단어를 입력하세요" />

        <ImageButton
            android:id="@+id/addItemButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:background="#00FFFFFF"
            android:translationX="-80dp"
            app:srcCompat="@drawable/yellop" />
    </FrameLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="20dp"
        android:background="@color/green" />

    <ImageButton
        android:id="@+id/buttonBackToMain"
        android:layout_width="62dp"
        android:layout_height="76dp"
        android:layout_gravity="start"
        android:background="#00FFFFFF"
        android:contentDescription="되돌아가기 버튼"
        app:srcCompat="@drawable/back" />

</LinearLayout>
